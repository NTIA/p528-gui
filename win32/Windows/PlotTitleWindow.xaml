<Window x:Class="p528_gui.Windows.PlotTitleWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:p528_gui.Windows"
        mc:Ignorable="d"
        Title="Set Plot Title" SizeToContent="WidthAndHeight" WindowStartupLocation="CenterOwner">
    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Resources/CommonStyles.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>
    <DockPanel LastChildFill="True" Margin="3">
        <StackPanel DockPanel.Dock="Bottom" Orientation="Horizontal" HorizontalAlignment="Right" Margin="3">
            <Button Content="Accept" Width="75" Click="Btn_Accept_Click"/>
            <Button Content="Cancel" Width="75" Click="Btn_Cancel_Click"/>
        </StackPanel>
        <StackPanel Orientation="Horizontal" Margin="3" FocusManager.FocusedElement="{Binding ElementName=tb_freq}">
            <TextBlock Text="New Title:" VerticalAlignment="Center"/>
            <TextBox Width="250" Name="tb_Title" KeyDown="tb_Title_KeyDown"/>
        </StackPanel>
    </DockPanel>
</Window>
